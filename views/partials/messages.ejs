<% if(typeof errors != 'undefined') { %>
    <% errors.forEach(function(){%>
      <div class="alert alert-dismissible alert-primary">
        <% errors %>
      </div>
  <%  });%>
    <% } %>

    <%(success_msg != '') { %>
      <div class="alert alert-dismissible alert-success">
        <% success_msg %>
      </div>

      <% } %>

      <%(error_msg != '') { %>
        <div class="alert alert-dismissible alert-primary">
          <% error_msg %>
        </div>
  
        <% } %>
        <%(error != '') { %>
          <div class="alert alert-dismissible alert-primary">
            <% error %>
          </div>
    
          <% } %>